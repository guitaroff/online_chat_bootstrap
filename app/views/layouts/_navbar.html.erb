<div class="b-example-divider"></div>

    <div class="container">
      <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <div class="col-md-3 mb-2 mb-md-0">
          <a href="/" class="d-inline-flex link-body-emphasis text-decoration-none">
            Главная
          </a>
        </div>

        <% if user_signed_in? %>
          <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
            <li class="nav-link px-2 link-secondary"><%= current_user.email%></li>
            <li><%= link_to "Чаты", rooms_path, class: "nav-link px-2"%></li>
          </ul>
        <% end %>
        <div class="col-md-3 text-end">
          <% if user_signed_in? %>
            <%= link_to "Выйти", destroy_user_session_path, data: { "turbo-method": :delete }, class: "btn btn-outline-primary me-2"%>
          <% else %>
            <%= link_to "Логин", new_user_session_path, class: "btn btn-outline-primary me-2"%>
            <%= link_to "Регистрация", new_user_registration_path, class: "btn btn-primary"%>
          <% end %>
        </div>
      </header>
    </div>
